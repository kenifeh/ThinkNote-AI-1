generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["private"]
}

model User {
  id          String        @id
  email       String?
  createdAt   DateTime      @default(now())
  ArchiveItem ArchiveItem[]

  @@schema("private")
}

model ArchiveItem {
  id           String    @id
  userId       String
  title        String
  tags         String[]  @default([])
  audioUrl     String?
  transcript   String   @db.Text
  summary      String   @db.Text
  wordCount    Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  expiresAt    DateTime? // Audio expiration time (24 hours from creation)
  User         User     @relation(fields: [userId], references: [id])

  @@schema("private")
}
