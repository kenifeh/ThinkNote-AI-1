generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["private"]
}

model User {
  id          String        @id
  email       String?
  createdAt   DateTime      @default(now())
  ArchiveItem ArchiveItem[]

  @@schema("private")
}

model ArchiveItem {
  id           String    @id
  userId       String
  title        String
  tags         String[]  @default([])
  audioUrl     String?
  transcript   String
  summary      String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  audioExpires DateTime?
  User         User      @relation(fields: [userId], references: [id])

  @@schema("private")
}
